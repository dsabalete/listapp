{% extends '::base.html.twig' %}

{% block body -%}

    <div class="jumbotron">
        <h1>Detalle</h1>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Fecha creación</th>
                <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Número de items</th>
                <td>{{ size }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="pager">
        <li><a href="{{ path('list') }}">Volver a la lista</a></li>
        <li><a href="{{ path('list_items', { 'id': entity.id }) }}">Ver items</a></li>
        <li><a href="{{ path('list_edit', { 'id': entity.id }) }}">Editar</a></li>
        <li><a href="{{ path('list_delete', { 'id': entity.id }) }}" class="link-del">Eliminar</a></li>
    </ul>
{% endblock %}
