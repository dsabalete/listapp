{% extends '::base.html.twig' %}
{% form_theme edit_form 'DevTaskBundle:Form:fields.html.twig' %}

{% block body -%}
    <h1>Editar Lista</h1>

	<form action="{{ path('list_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
		<input type="hidden" name="_method" value="PUT" />
	    {{ form_errors(edit_form) }}
		{#
		{{ form_row(edit_form.task) }}
		{{ form_widget(edit_form.complete) }}
		#}
		{{ form_rest(edit_form) }}
		<p>
			<button type="submit" formnovalidate>Actualiza</button>
		</p>
	</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('list') }}">
            Volver a la lista
        </a>
    </li>
</ul>
{% endblock %}
